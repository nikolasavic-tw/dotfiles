# Directory navigation

# If LSDeluxe is installed
alias ls="lsd"
alias l="ls -l"
alias la="ls -a"
alias ll="ls -la"
alias lt='ls --tree'
alias lta='ls -a --tree'

alias ..="cd .."
alias ...="cd ../.."

# Favorites
alias C="cd $HOME/.config"
alias L="cd $HOME/.local"
alias D="cd $HOME/Downloads"
alias P="cd $HOME/Projects"
